# BendBionics - Development Environment Configuration

# Database Configuration
# PostgreSQL for development (using local trust authentication)
# For local development, you can omit the password if your PostgreSQL is configured for trust auth
# Replace 'username' with your PostgreSQL username
DATABASE_URL=postgresql://username@localhost:5432/bendbionics

# Authentication Settings
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
# IMPORTANT: Change this to a secure random key for development
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (Mailgun)
# Get your API key from https://app.mailgun.com/
MAILGUN_API_KEY=your-mailgun-api-key-here
MAILGUN_DOMAIN=your-mailgun-domain-here
MAILGUN_FROM_EMAIL=noreply@yourdomain.com
MAILGUN_FROM_NAME=BendBionics
MAILGUN_REGION=eu

# Email Verification Settings
EMAIL_VERIFICATION_ENABLED=false
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24
EMAIL_VERIFICATION_URL=http://localhost:5173/verify-email

# Password Reset Settings
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1
PASSWORD_RESET_URL=http://localhost:5173/reset-password

# Frontend/Backend URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000

# App Configuration
APP_NAME='BendBionics API'
DEBUG=true
LOG_LEVEL=DEBUG

# CORS Configuration
CORS_ORIGINS='["http://localhost:5173"]'
CORS_ALLOW_ALL_ORIGINS=false
