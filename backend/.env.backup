# Environment Configuration for Tauri Desktop App
# Copy this content to your .env file

# Database Configuration
# Local SQLite database for desktop app
DATABASE_URL=sqlite:///./soft_robot.db

# Authentication Settings
# Generate a strong, unique secret key (min 32 chars)
SECRET_KEY=your-super-secret-key-here-minimum-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours for desktop app

# Frontend URL (for Tauri desktop app)
# This should point to your Tauri app's local server
FRONTEND_URL=http://localhost:5173

# App Configuration
APP_NAME=Soft Robot Desktop App
DEBUG=true  # Enable debug for development
LOG_LEVEL=DEBUG  # More verbose logging for development

# CORS Configuration for Desktop App
# Allow localhost for development
CORS_ORIGINS=["http://localhost:5173", "http://127.0.0.1:5173"]
CORS_ALLOW_ALL_ORIGINS=true  # For desktop app development

# Desktop App Specific Settings
# Enable local user accounts (no email verification required)
ENABLE_LOCAL_USERS=true
# Disable email verification for desktop app
REQUIRE_EMAIL_VERIFICATION=false

# Security Settings for Desktop App
# Disable HTTPS redirect (not needed for local desktop app)
ENABLE_HTTPS_REDIRECT=false
# Relaxed rate limiting for desktop app
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=60000  # 1 minute window
