# BendBionics - Production Environment Configuration

# Database Configuration
# IMPORTANT: PostgreSQL for production MUST use password authentication
# Format: postgresql://username:password@host:5432/database
# Example: postgresql://bendbionics_user:SecureP@ssw0rd@localhost:5432/bendbionics_production
DATABASE_URL=postgresql://username:your-secure-password-here@host:5432/bendbionics_production

# Authentication Settings
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
# IMPORTANT: Use a strong, randomly generated secret key in production
SECRET_KEY=your-secure-production-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (Mailgun)
# Get your production API key from https://app.mailgun.com/
MAILGUN_API_KEY=your-production-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain-here
MAILGUN_FROM_EMAIL=noreply@yourdomain.com
MAILGUN_FROM_NAME=BendBionics
MAILGUN_REGION=eu

# Email Verification Settings
EMAIL_VERIFICATION_ENABLED=true
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24
EMAIL_VERIFICATION_URL=https://yourdomain.com/verify-email

# Password Reset Settings
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1
PASSWORD_RESET_URL=https://yourdomain.com/reset-password

# Frontend/Backend URLs
# Update these with your actual production domains
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com

# App Configuration
APP_NAME='BendBionics API'
DEBUG=false
LOG_LEVEL=INFO

# CORS Configuration
# Add all your production domains
CORS_ORIGINS='["https://yourdomain.com","https://www.yourdomain.com"]'
CORS_ALLOW_ALL_ORIGINS=false
