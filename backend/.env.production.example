# BendBionics - Production Environment Configuration

# Database Configuration
# IMPORTANT: PostgreSQL for production MUST use password authentication
# Format: postgresql://username:password@host:5432/database
# Example: postgresql://bendbionics_user:SecureP@ssw0rd@localhost:5432/bendbionics_production
DATABASE_URL=postgresql://bendbionics:your-secure-password-here@localhost:5432/bendbionics_production

# Authentication Settings
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secure-production-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (Mailgun)
MAILGUN_API_KEY=your-production-mailgun-api-key
MAILGUN_DOMAIN=mg.bendbionics.com
MAILGUN_FROM_EMAIL=noreply@bendbionics.com
MAILGUN_FROM_NAME=BendBionics

# Email Verification Settings
EMAIL_VERIFICATION_ENABLED=true
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24
EMAIL_VERIFICATION_URL=https://bendbionics.com/verify-email

# Password Reset Settings
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1
PASSWORD_RESET_URL=https://bendbionics.com/reset-password

# Frontend/Backend URLs
FRONTEND_URL=https://bendbionics.com
BACKEND_URL=https://api.bendbionics.com

# App Configuration
APP_NAME='BendBionics API'
DEBUG=false
LOG_LEVEL=INFO

# CORS Configuration
# Add all your production domains
CORS_ORIGINS='["https://bendbionics.com","https://www.bendbioncs.com"]'
CORS_ALLOW_ALL_ORIGINS=false
